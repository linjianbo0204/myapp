<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/background_color"
    android:clickable="true">
    
    <ImageView
        android:id="@+id/food_list_image"
    	android:layout_width="150dp"
    	android:layout_height="100dp"
    	android:layout_marginLeft="10dp"
    	android:layout_marginRight="10dp">
    </ImageView>	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:orientation="vertical"
	    android:gravity="center_vertical">
	    <TextView
	        android:id="@+id/food_list_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textSize="20dp"
	        android:textColor="#333333"
	        android:gravity="left"></TextView>
	    <TextView
	        android:id="@+id/food_list_detail"
	        android:layout_width="fill_parent"
	        android:textSize="15dp"
	        android:textColor="#999999"
	        android:layout_height="wrap_content"></TextView>
	</LinearLayout>
	<ImageButton
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/icon_forward_bg"
    	android:layout_marginRight="10dp"></ImageButton>
</LinearLayout>
