<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <com.aifengqiang.ui.NavigationView 
        android:id="@+id/order_nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></com.aifengqiang.ui.NavigationView>
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ededed">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        	<TextView 
           		android:layout_width="match_parent"
            	android:layout_height="wrap_content"
           		android:text="设置条件，帮你找优惠餐厅"
            	android:textColor="#666666"
            	android:layout_marginTop="10dp"
            	android:layout_marginLeft="5dp"/>
        	<LinearLayout 
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:background="#ffffff"
        	    android:orientation="vertical"
        		android:layout_marginTop="3dp">
        		<LinearLayout 
        	   	 	android:layout_width="match_parent"
        	    	android:layout_height="0.5dp"
        		    android:layout_weight="1"
        	    	android:background="#dedede"></LinearLayout>
        		<LinearLayout 
        		    android:layout_width="match_parent"
        		    android:layout_height="40dp"
        		    android:orientation="horizontal"
        		    android:gravity="center_vertical"
        		    android:background="@drawable/background_color"
        		    android:clickable="true"
        		    android:layout_weight="1">
        		    <TextView
        		        android:id="@+id/order_date"
        		    	android:layout_marginLeft="10dp"
        		        android:layout_width="0dp"
        		        android:layout_height="wrap_content"
        		        android:layout_weight="1"
        		        android:gravity="left"
        		        android:textSize="15sp"
        		        android:textColor="#666666"
        		        android:text="1-20 周二"/>
        		    <TextView
        		        android:id="@+id/order_time"
        		        android:layout_width="0dp"
        		        android:layout_height="wrap_content"
        		        android:layout_weight="1"
        		        android:gravity="center"
        		        android:textSize="15sp"
        		        android:textColor="#666666"
        		        android:text="11:30"/>
        		    <TextView
        		        android:id="@+id/order_people_count"
        		        android:layout_width="0dp"
        		        android:layout_height="wrap_content"
        		        android:layout_weight="1"
        		    	android:layout_marginRight="10dp"
        		        android:gravity="right"
        		        android:textSize="15sp"
        		        android:textColor="#666666"
        		        android:text="10人"/>
        		</LinearLayout>
        		<LinearLayout
        		    android:layout_width="match_parent"
        		    android:layout_height="0.5dp"
        		    android:layout_marginLeft="5dp"
        		    android:layout_marginRight="5dp"
        		    android:background="#dedede">
        		</LinearLayout>
        		<LinearLayout 
        		    android:layout_width="match_parent"
        		    android:layout_height="40dp"
        		    android:orientation="horizontal"
        		    android:gravity="center_vertical"
        		    android:background="@drawable/background_color"
        		    android:clickable="true"
        		    android:layout_weight="1">
        		    <TextView
        		        android:layout_width="wrap_content"
        		        android:layout_height="wrap_content"
        		        android:textColor="#666666"
        		        android:textSize="15sp"
        		    	android:layout_marginLeft="10dp"
        		        android:text="距离"></TextView>
        		    <TextView 
        		        android:id="@+id/order_zone"
        		        android:layout_marginLeft="3dp"
        		        android:layout_width="wrap_content"
        		        android:layout_height="wrap_content"
        		        android:textColor="#f88727"
        		        android:textSize="12sp"
        		        android:text="[商圈]"
        		        android:layout_weight="1"/>
        		    <TextView
        		        android:id="@+id/order_distance"
        		        android:layout_width="wrap_content"
        		        android:layout_height="wrap_content"
        		    	android:layout_marginRight="10dp"
        		        android:textColor="#f88727"
        		        android:textSize="15sp"
        		        android:gravity="right"
        		        android:text="2000米"/>
        		</LinearLayout>
        		<LinearLayout
        		    android:layout_width="match_parent"
        		    android:layout_height="0.5dp"
        		    android:layout_marginLeft="5dp"
        		    android:layout_marginRight="5dp"
        		    android:background="#dedede">
        		</LinearLayout>
        		<LinearLayout
        		    android:id="@+id/order_style_linear" 
        		    android:layout_width="match_parent"
        		    android:layout_height="40dp"
        		    android:orientation="horizontal"
        		    android:gravity="center_vertical"
        		    android:background="@drawable/background_color"
        		    android:clickable="true"
        		    android:layout_weight="1">
        		    <TextView
        		        android:layout_width="wrap_content"
        		        android:layout_height="wrap_content"
        		        android:textColor="#666666"
        		        android:textSize="15sp"
        		    	android:layout_marginLeft="10dp"
        		        android:text="口味"></TextView>
        		    <TextView
        		        android:id="@+id/order_style_text"
        		        android:layout_width="wrap_content"
        		        android:layout_height="wrap_content"
        		        android:textColor="#f88727"
        		        android:textSize="15sp"
        		        android:gravity="right"
        		        android:text="本帮江浙菜"
        		    	android:layout_marginRight="10dp"
        		        android:layout_weight="1"/>
        		</LinearLayout>
        		
        		<LinearLayout
        		    android:layout_width="match_parent"
        		    android:layout_height="0.5dp"
        		    android:layout_marginLeft="5dp"
        		    android:layout_marginRight="5dp"
        		    android:background="#dedede">
        		</LinearLayout>
        		<LinearLayout 
        		    android:layout_width="match_parent"
        		    android:layout_height="40dp"
        		    android:orientation="horizontal"
        		    android:gravity="center_vertical"
        		    android:layout_weight="1">
        		    <TextView
        		        android:layout_width="wrap_content"
        		        android:layout_height="wrap_content"
        		        android:textColor="#666666"
        		        android:textSize="15sp"
        		    	android:layout_marginLeft="10dp"
        		        android:text="称呼"></TextView>
        		    <EditText
        		        android:id="@+id/order_firstname"
        		        android:layout_width="wrap_content"
        		        android:layout_height="wrap_content"
        		        android:textColor="#f88727"
        		        android:textSize="15sp"
        		        android:gravity="right"
        		        android:hint="请输入您的姓氏"
        		        android:textColorHint="#cccccc"
        		        android:background="#ffffffff"
        		        android:layout_weight="1"/>
        		    <RadioGroup
        		        android:layout_width="wrap_content"
        		        android:layout_height="wrap_content"
        		        android:orientation="horizontal">
        		    <RadioButton
        		        android:id="@+id/order_man_button"
        		        android:layout_width="25dp"
        		        android:layout_height="25dp"
        		        android:checked="true"
        		        android:background="@drawable/radio_button_choose_bg"
        		        android:button="@null"></RadioButton>
        		    <TextView 
        		        android:id="@+id/order_man_text"
        		        android:layout_width="wrap_content"
        		        android:layout_height="wrap_content"
        		        android:textColor="#f88727"
        		        android:textSize="15sp"
        		        android:text="先生"></TextView>
        		    <RadioButton
        		        android:id="@+id/order_woman_button"
        		        android:layout_width="25dp"
        		        android:layout_height="25dp"
        		        android:background="@drawable/radio_button_choose_bg"
        		        android:button="@null"></RadioButton>
        		    <TextView 
        		        android:id="@+id/order_woman_text"
        		        android:layout_width="wrap_content"
        		        android:layout_height="wrap_content"
        		        android:textColor="#666666"
        		        android:textSize="15sp"
        		    	android:layout_marginRight="10dp"
        		        android:text="女士"></TextView>
        		    </RadioGroup>
        		</LinearLayout>
        		
        		<LinearLayout 
        	   	 	android:layout_width="match_parent"
        	    	android:layout_height="0.5dp"
        	    	android:background="#dedede"></LinearLayout>
        	</LinearLayout>
        	<TextView 
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:text="以下为可选项"
            	android:textColor="#666666"
            	android:layout_marginTop="10dp"
            	android:layout_marginLeft="5dp"/>
   			<LinearLayout 
        		android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:background="#ffffff"
        	    android:orientation="vertical"
        		android:layout_marginTop="3dp">
        		<LinearLayout 
        	   	 	android:layout_width="match_parent"
        	    	android:layout_height="0.5dp"
        	    	android:background="#dedede"
        		    android:layout_weight="1"></LinearLayout>
        		<LinearLayout 
        		    android:id="@+id/order_cost_linear"
        		    android:layout_width="match_parent"
        		    android:layout_height="40dp"
        		    android:orientation="horizontal"
        		    android:gravity="center_vertical"
        		    android:background="@drawable/background_color"
        		    android:clickable="true"
        		    android:layout_weight="1">
        		    <TextView
        		        android:layout_width="wrap_content"
        		        android:layout_height="wrap_content"
        		        android:textColor="#666666"
        		        android:textSize="15sp"
        		        android:text="预计消费金额"
        		    	android:layout_marginLeft="10dp"
        		        android:layout_weight="1"></TextView>
        		    <TextView
        		        android:id="@+id/order_cost"
        		        android:layout_width="wrap_content"
        		        android:layout_height="wrap_content"
        		        android:textColor="#f88727"
        		        android:textSize="15sp"
        		        android:gravity="right"
        		    	android:layout_marginRight="10dp"
        		        android:text="6000元"/>
        		</LinearLayout>
        		<LinearLayout 
        	   	 	android:layout_width="match_parent"
        	    	android:layout_height="0.5dp"
        	    	android:background="#dedede"></LinearLayout>
        	</LinearLayout>
        	<LinearLayout 
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:orientation="vertical"
        	    android:layout_marginTop="3dp">
        	</LinearLayout>
        	
        	<LinearLayout
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
           	 	android:orientation="vertical"
           	 	android:layout_marginTop="10dp"
            	android:background="#ffffff"
           	 	>
        		<LinearLayout 
        	   		android:layout_width="match_parent"
        	    	android:layout_height="0.5dp"
        	    	android:background="#dedede"
        		    android:layout_weight="1"></LinearLayout>
        		<LinearLayout 
        		    android:layout_width="match_parent"
        		    android:layout_height="40dp"
        		    android:orientation="horizontal"
        		    android:gravity="center_vertical"
        		    android:layout_weight="1">
        		    <TextView
        		        android:layout_width="0dp"
        		        android:layout_height="wrap_content"
        		        android:textColor="#666666"
        		        android:textSize="15sp"
        		        android:text="我要订包房"
        		    	android:layout_marginLeft="10dp"
        		        android:layout_weight="1"></TextView>
        		    <RadioButton
        		        android:id="@+id/order_box"
        		        android:layout_width="55dp"
        		        android:layout_height="30dp"
        		    	android:layout_marginRight="10dp"
        		        android:background="@drawable/radio_button_slide_bg"
        		        android:button="@null">
        		    </RadioButton>
        		</LinearLayout>
        		<LinearLayout 
        		        android:id="@+id/order_box_agree"
        		        android:layout_width="match_parent"
        		        android:layout_height="wrap_content"
        		        android:orientation="vertical"
        		        android:visibility="gone">
        		        
        				<LinearLayout 
        	   	 			android:layout_width="match_parent"
        	    			android:layout_height="0.5dp"
        	    			android:background="#dedede"
        	    			android:layout_marginLeft="10dp"
        	    			android:layout_marginRight="10dp"
        		    		android:layout_weight="1"></LinearLayout>
        				<LinearLayout 
        	   	 			android:layout_width="match_parent"
        	    			android:layout_height="40dp"
        	    			android:gravity="center_vertical"
        		    		android:layout_weight="1">
        					<RadioButton
        		        		android:layout_marginLeft="10dp"
        		        		android:id="@+id/order_box_button"
        		        		android:layout_width="25dp"
        		        		android:layout_height="25dp"
        		        		android:gravity="center"
        		        		android:background="@drawable/radio_button_choose_bg"
        		        		android:button="@null"/>
        		    		<TextView 
        		       			android:id="@+id/order_box_text"
        		        		android:layout_width="wrap_content"
        		        		android:layout_height="wrap_content"
        		        		android:textColor="#666666"
        		        		android:textSize="15sp"
        		        		android:text="如没有包房可接受大厅"></TextView>
        		    	</LinearLayout>
        		   	</LinearLayout>
        		<LinearLayout 
        	   		android:layout_width="match_parent"
        	    	android:layout_height="0.5dp"
        	    	android:background="#dedede"></LinearLayout>
        		
        	</LinearLayout>
        	<LinearLayout 
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:orientation="vertical"
        	    android:layout_marginTop="10dp">
        		<LinearLayout 
        	   		android:layout_width="match_parent"
        	    	android:layout_height="0.5dp"
        	    	android:background="#dedede"
        		    android:layout_weight="1"></LinearLayout>
        		<LinearLayout 
        		    android:layout_width="match_parent"
        		    android:layout_height="wrap_content"
        		    android:background="#ffffff"
        		    android:layout_weight="1">
        		    <EditText 
        		        android:layout_marginLeft="10dp"
        		        android:layout_marginRight="10dp"
        		        android:layout_width="match_parent"
        		        android:layout_height="40dp"
        		        android:background="#ffffffff"
        		        android:hint="您有任何需要可以告诉我们..."
        		        android:textSize="15sp"
        		        android:textColor="#333333"
        		        android:textColorHint="#cccccc"/>
        		</LinearLayout>
        		
        		<LinearLayout 
        	   		android:layout_width="match_parent"
        	    	android:layout_height="0.5dp"
        	    	android:background="#dedede"
        	    	android:layout_marginBottom="20dp"></LinearLayout>
        		</LinearLayout>
        </LinearLayout>
        
    </ScrollView>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#f88727"
            android:gravity="center_vertical"
        	android:layout_weight="1"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#fcfcfc"
        	android:layout_weight="1">
            <Button 
                android:id="@+id/order_submit"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:textColor="#ffffff"
                android:text="@string/orderbutton"
                android:background="@drawable/login_submit_bg"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
