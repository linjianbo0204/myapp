<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ededed"
    android:id="@+id/order_lists_item_first_linear"
    android:descendantFocusability="blocksDescendants"
    >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="#ffffff">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede"
        android:layout_weight="1"/>
    <LinearLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical">
        <TextView 
            android:id="@+id/order_lists_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周星星"
            android:textSize="21sp"
            android:layout_marginRight="5dp"
            android:textColor="#333333"/>
        <ImageView 
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/icon_order"/>
        <TextView
            android:id="@+id/order_lists_item_ordernum"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2015020323"
            android:textSize="13sp"
            android:textColor="#999999"></TextView>
        <Button
            android:id="@+id/order_lists_item_complain" 
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/login_submit_bg"
            android:layout_marginLeft="5dp"
            android:text="投诉"
            android:focusableInTouchMode="false"
            android:visibility="gone"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/order_lists_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/login_submit_bg"
            android:text="点评"
            android:layout_marginLeft="5dp"
            android:focusableInTouchMode="false"
            android:visibility="gone"
            android:textColor="#ffffff"/>
        <LinearLayout 
            android:id="@+id/order_lists_item_giveup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            >
        	<ImageView 
            	android:layout_width="30dp"
            	android:layout_height="30dp"
            	android:layout_marginTop="5dp"
            	android:background="@drawable/cancel"/>
        	<TextView
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:textSize="13dp"
        	    android:layout_gravity="center"
            	android:text="取消"
        	    android:textColor="#999999"/>
            
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#dedede"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:layout_marginRight="5dp">
        	<LinearLayout 
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
           		android:gravity="center|start"
            	android:layout_weight="1">
           		<ImageView 
           		    android:layout_width="20dp"
           		    android:layout_height="20dp"
           		    android:src="@drawable/date"
           		    android:layout_gravity="center"/>
        		<TextView
        	    	android:id="@+id/order_lists_item_date"
            		android:layout_width="wrap_content"
            		android:layout_height="match_parent"
            		android:textColor="#333333"
            		android:textSize="13sp"
           		    android:gravity="center"
            		android:text="01-20"/>
        	</LinearLayout>
        	<LinearLayout 
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
           		android:gravity="center"
            	android:layout_weight="1">
           		<ImageView 
           		    android:layout_width="20dp"
           		    android:layout_height="20dp"
           		    android:src="@drawable/time"
           		    android:layout_gravity="center"/>
        		<TextView
        	    	android:id="@+id/order_lists_item_time"
            		android:layout_width="wrap_content"
            		android:layout_height="match_parent"
           			android:gravity="center"
            		android:textSize="13sp"
            		android:textColor="#333333"
            		android:text="11:30"/>
        	</LinearLayout>
        	<LinearLayout 
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
           		android:gravity="center"
            	android:layout_weight="1">
           		<ImageView 
           		    android:layout_width="20dp"
           		    android:layout_height="20dp"
           		    android:src="@drawable/poeple"
           		    android:layout_gravity="center"/>

        		<TextView
        		    android:id="@+id/order_lists_item_count"
        		    android:layout_width="wrap_content"
        		    android:layout_height="match_parent"
        		    android:gravity="center|end"
        		    android:text="4人"
            		android:textSize="13sp"
        		    android:textColor="#333333" />

        	</LinearLayout>
        </LinearLayout>
        <View 
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dedede"/>
        <LinearLayout 
            android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
           	android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="5dp">
           	<ImageView 
           		android:layout_width="20dp"
           		android:layout_height="20dp"
           		android:src="@drawable/room"
           		android:layout_gravity="center"/>
        	<TextView
            	android:id="@+id/order_lists_item_room"
            	android:layout_width="wrap_content"
            	android:layout_height="match_parent"
            	android:gravity="center_vertical"
            	android:textColor="#333333"
            	android:textSize="13sp"
            	android:text="包房（可大厅）">
        	</TextView>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#dedede"/>
    <TextView 
        android:id="@+id/order_lists_item_mark"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#333333"
        android:textSize="13sp"
        android:text="备注：准备一个婴儿椅"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_lists_item_res_detail"
        android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       	android:background="@drawable/background_color"
        android:id="@+id/order_lists_res_linear"
       	android:orientation="horizontal">
    <TextView 
        android:id="@+id/order_lists_res"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textSize="13sp"
        android:textColor="#333333"
        android:text="备注：准备一个婴儿椅"/>
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_arrow"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       	android:background="@drawable/background_color"
       	android:id="@+id/order_lists_address_linear"
       	android:orientation="horizontal">
    <TextView 
        android:id="@+id/order_lists_address"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textColor="#333333"
        android:textSize="13sp"
        android:text="备注：准备一个婴儿椅"/>
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_arrow"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       	android:id="@+id/order_lists_discount_linear"
        >
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       	android:background="@drawable/background_color"
       	android:orientation="horizontal">
    <TextView 
        android:id="@+id/order_lists_discount"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:minLines="1"
        android:minHeight="40dp"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#333333"
        android:text="优惠信息："/>
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede"/>
</LinearLayout>
</LinearLayout>
