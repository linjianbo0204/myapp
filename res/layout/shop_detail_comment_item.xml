<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_weight="1"
        android:background="#dedede"/>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ffffff">
    <ImageView 
        android:id="@+id/commen_item_picture"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/touxiang"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:orientation="horizontal"
	        android:layout_height="40dp"
	        android:gravity="center_vertical">
	        <TextView
	            android:id="@+id/comment_item_name" 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:textColor="#333333"
	            android:textSize="15sp"
	            android:layout_weight="1"
	            android:text="微笑蓝天"/>
	        <TextView
	            android:id="@+id/comment_item_date"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:textSize="12sp"
	            android:textColor="#cccccc"
	            android:gravity="center_vertical"
	            android:text="2015-01-19"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        <com.aifengqiang.ui.ShopStarView 
	            android:id="@+id/comment_item_star"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            ></com.aifengqiang.ui.ShopStarView>
	        <TextView
	            android:id="@+id/comment_item_score"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="12sp"
	            android:textColor="#cccccc"
	            android:gravity="bottom"
	            android:text="口味:3 环境：3 服务：3"/>
	    </LinearLayout>
	    <TextView 
	        android:id="@+id/comment_item_cost"
	        android:layout_width="match_parent"
	        android:layout_height="20dp"
	        android:text="人均128元"
	        android:textColor="#cccccc"
	        android:textSize="12sp"
	        android:gravity="center_vertical"/>
	    <TextView
	        android:id="@+id/comment_item_comment_text"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="15sp"
	        android:textColor="#666666"
	        android:text="味道不错，下次还来，味道不错，下次还来，味道不错，下次还来，味道不错，下次还来"/>
	     <TextView
	        android:id="@+id/comment_item_highlight"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#cccccc"
	        android:text="推荐菜：宫保鸡丁，松鼠桂鱼"
	        android:textSize="12sp"></TextView>
	</LinearLayout>
</LinearLayout>
</LinearLayout>
